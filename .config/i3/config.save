        bindsym $mod+d exec rofi -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/wofi/launcher.rasi

    # Power menu
        bindsym $mod+P exec /home/matheusmercadante/.config/wofi/wofi-power.sh


